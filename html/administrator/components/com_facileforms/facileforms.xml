	<uninstall>
		<queries>
			<query>
				delete from `#__components`
				where `option` = 'com_facileforms'
				and (
					(admin_menu_link like 'option=com_facileforms&amp;act=run%')
					or
					(admin_menu_link='' and link='')
				)
			</query>
		</queries>
	</uninstall>
