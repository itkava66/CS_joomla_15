	<params name="ff_com_params" description="FacileForms - Parameter instellingen">
		<param name="ff_com_name" type="text" default="" label="Form name" description="Voer hier de naam van het formulier in" />
		<param name="ff_com_page" type="text" default="1" label="Page number" description="Vul hier het start paginanummer in" />
		<param name="ff_com_frame" type="radio" default="0" label="Run in iframe" description="Voer het formulier uit in een Iframe">
			<option value="0">Nee</option>
			<option value="1">Ja</option>
		</param>
		<param name="ff_com_border" type="radio" default="0" label="Border" description="Selecteer of de border getoond wordt">
			<option value="0">Nee</option>
			<option value="1">Ja</option>
		</param>
		<param name="ff_com_align" type="list" default="1" label="Horizontal align" description="Kies hier de horizontale uitlijning">
			<option value="0">Links</option>
			<option value="1">Center</option>
			<option value="2">Rechter</option>
			<option value="3">Positie</option>
		</param>
		<param name="ff_com_left" type="text" default="0" label="Left position (pixels)" description="Positie links in pixels (als horizontale uitlijning is=Positie)" />
		<param name="ff_com_top" type="text" default="0" label="Top position (pixels)" description="Top positie in pixels" />
		<param name="ff_com_parprv" type="text" default="" label="Private parameters" description="Parameters uitsluitend voor hoofd formulier. Bijvoorbeeld: &amp;ff_param_foo=bar&amp;ff_param_xy=123" />
		<param name="ff_com_parpub" type="text" default="" label="Public parameters" description="Parameters verkregen van subformulieren. Bijvoorbeeld: &amp;ff_param_foo=bar&amp;ff_param_xy=123" />
		<param name="ff_com_suffix" type="text" default="" label="CSS class suffix" description="Suffix om op elke CSS class naam toe te passen" />
